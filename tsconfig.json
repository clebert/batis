{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "lib": ["ES2020", "DOM"],
    "module": "ES2020",
    "moduleResolution": "Node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "target": "ES2020",
    "pretty": true,
    "declaration": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*"]
}
