{
  "name": "batis",
  "version": "13.0.2",
  "description": "General reactive JavaScript programming using the idea of React Hooks.",
  "bugs": {
    "url": "https://github.com/clebert/batis/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/clebert/batis.git"
  },
  "license": "MIT",
  "author": "Clemens Akens <clebert@me.com>",
  "sideEffects": false,
  "main": "lib/cjs/index.js",
  "module": "lib/esm/index.js",
  "types": "lib/esm/index.d.ts",
  "files": [
    "lib"
  ],
  "scripts": {
    "preci": "run-s setup",
    "ci": "run-p compile fmt:check lint test",
    "postci": "size-limit",
    "compile": "run-p compile:*",
    "compile:cjs": "tscmd compile --output cjs",
    "compile:esm": "tscmd compile --output esm",
    "fmt": "tscmd fmt",
    "fmt:check": "tscmd fmt --check",
    "lint": "tscmd lint",
    "release": "npm version",
    "postrelease": "git push --follow-tags",
    "setup": "tscmd setup --arch node --dist package",
    "start": "node example.js",
    "test": "tscmd test --coverage"
  },
  "devDependencies": {
    "@clebert/tscmd": "^0.1.0",
    "@size-limit/preset-small-lib": "^5.0.3",
    "npm-run-all": "^4.1.5",
    "size-limit": "^5.0.3"
  },
  "size-limit": [
    {
      "path": "lib/esm/index.js",
      "limit": "1.3 KB"
    }
  ]
}
